{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "rules": {
        "indent": 0,
        "no-console": 1,
        "camelcase": 0,
        "no-tabs": 0,
        "quotes": ["error", "single", {
            "avoidEscape": true,
            "allowTemplateLiterals": true
        }]
    },
    "globals":{
        "NodeJS": true
    },
    "ignorePatterns":["dist/"]
}
